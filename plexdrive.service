# /etc/systemd/system/plexdrive.service

[Unit]
Description=plexdrive
After=network-online.target
AssertPathIsDirectory=/mnt/plexdrive

[Service]
Type=simple
Restart=always
TimeoutStartSec=400
ExecStart=/usr/bin/plexdrive mount --drive-id=xxxxxxx -o allow_other -v 2 --chunk-load-threads=16 --chunk-load-ahead=16 --max-chunks=256 --refresh-interval=1m /mnt/plexdrive
ExecStopPost=/usr/bin/fusermount -quz /mnt/plexdrive

[Install]
WantedBy=multi-user.target
